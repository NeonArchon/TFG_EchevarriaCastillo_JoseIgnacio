<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <View
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color="@color/white" /> <!-- Reemplaza con tu color -->

    <!-- Bordes redondeados solo en la parte superior -->
    <corners
        android:topLeftRadius="8dp" <!-- Radio para la esquina superior izquierda -->
        android:topRightRadius="8dp" <!-- Radio para la esquina superior derecha -->
         android:bottomLeftRadius="0dp"
            android:bottomRightRadius="0dp"/>

    <!-- Color y grosor del borde (opcional) -->
    <stroke
        android:width="1dp"
        android:color="@color/white" /> <!-- Reemplaza con tu color -->
</selector>