<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50DAF9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/NomnreAap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Tu Perfil"
        android:textColor="#DA2C49"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="163dp"
        android:layout_height="138dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/profileGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="400dp"
        android:layout_height="390dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#DA5AA7"
        app:cardCornerRadius="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintVertical_bias="0.062">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/fondo_formulario"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Campos de texto -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:minHeight="30dp"
                    android:padding="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apodo"
                    android:inputType="textPersonName"
                    android:minHeight="30dp"
                    android:padding="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:minHeight="30dp"
                    android:padding="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Nacimiento"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:padding="12dp" />

                <!-- Botón de registro -->
                <Button
                    android:id="@+id/btnCambiarDatos"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Cambiar Datos"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    app:backgroundTint="#4B4A4A" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="12dp">

                    <!-- Botón Mi carrito -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCarrito"
                        style="@style/IconButtonStyle"
                        android:layout_width="2dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:text="Mi carrito"
                        android:drawableTop="@drawable/ic_carrito"/>

                    <!-- Botón Mi Wishlist -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnWishlist"
                        style="@style/IconButtonStyle"
                        android:layout_width="2dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:text="Mi Wishlist"
                        android:drawableTop="@drawable/ic_wishlist"/>

                    <!-- Botón Vender Producto -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnVender"
                        style="@style/IconButtonStyle"
                        android:layout_width="2dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:text="Vender Producto"
                        android:drawableTop="@drawable/ic_vender"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>



    </androidx.cardview.widget.CardView>

